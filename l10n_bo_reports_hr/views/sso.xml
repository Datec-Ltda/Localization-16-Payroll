<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- formulario -->
    <record id="view_sso_form_wizard" model="ir.ui.view">
        <field name="name">Seguro Social</field>
        <field name="model">hr.payroll.reporte.sso</field>
        <field name="arch" type="xml">
            <form string="Formulario para generar documentos">
                <group>
                    <field name="doc_type" />
                </group>
                <footer>
                    <button name="action_generate_report" type="object" string="Generar"
                        class="oe_highlight" />
                    <button string="Cancelar" special="cancel" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>
</odoo>