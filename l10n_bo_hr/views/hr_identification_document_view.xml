<?xml version="1.0" encoding="utf-8"?>

<odoo>
<!--    Documento de identificación  -->
    <record id="hr_identification_document_form" model="ir.ui.view">
            <field name="name">hr.identification.documents.form</field>
            <field name="model">hr.identification.documents</field>
            <field name="arch" type="xml">
                <form string="Documento de identificación">
                    <group col="4">
                        <field colspan="4" name="type_identification_document"/>
                        <field colspan="4" name="valid_date"/>
                        <field colspan="4" name="document_number"/>
                        <field colspan="4" name="document_extension_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="hr_identification_document_tree" model="ir.ui.view">
            <field name="name">hr.identification.documents.tree</field>
            <field name="model">hr.identification.documents</field>
            <field name="arch" type="xml">
                <tree string="Documento de identificación">
                    <field colspan="4" name="type_identification_document"/>
                    <field colspan="4" name="valid_date"/>
                    <field colspan="4" name="document_number"/>
                    <field colspan="4" name="document_extension_id"/>
                </tree>
            </field>
        </record>

        <record id="hr_identification_document_search" model="ir.ui.view">
            <field name="name">hr.identification.documents.search</field>
            <field name="model">hr.identification.documents</field>
            <field name="arch" type="xml">
                <search string="Search Documento de identificación">
                    <field name="type_identification_document" string="Documento de identificación"/>
                    <field name="document_number" />
               </search>
            </field>
        </record>

</odoo>
