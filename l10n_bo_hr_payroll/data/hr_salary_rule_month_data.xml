<!--   MONTO ANC 1%              -->
    <record id="orbiware_l10n_bo_hr_payroll_anc_amount_1" model="hr.salary.rule">
        <field name="category_id" ref="BASIC_INF"/>
        <field name="name">MONTO ANC 1%</field>
        <field name="code">ANC_ONE</field>
        <field name="sequence">101</field>
        <field name="condition_select">none</field>
        <field name="amount_select">code</field>
        <field name="amount_python_compute">
if ((GROSS-13000)*1)/100 &lt; 0:
    result = 0
else:
    result = ((GROSS-13000)*1)/100
        </field>
        <field name="struct_id" ref="structure_month"/>
    </record>

